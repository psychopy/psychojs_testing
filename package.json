{
  "name": "psychojs",
  "version": "2020.1.0",
  "private": true,
  "description": "Helps run in-browser neuroscience, psychology, and psychophysics experiments",
  "license": "MIT",
  "author": {
    "name": "Alain Pitiot"
  },
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:docs",
    "build:css": "postcss -o dist/psychojs.css src/index.css",
    "build:docs": "jsdoc src -r -d docs",
    "build:js": "rollup -c",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "jshint rollup.config.js src/**/*.js",
    "start": "npm run build && npm run deploy && npm run e2e_test",
    "deploy": "node test/cli/deployExperiments.js --branch thomas",
    "e2e_test": "npx wdio test/wdio.conf.js --server bs --upload yes --branch thomas --platform *Windows*10*chrome* --test e2e_calibration"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "ie": 11
          },
          "spec": true,
          "forceAllTransforms": true,
          "debug": true
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "severity": "warning"
        }
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@wdio/cli": "^6.4.7",
    "@wdio/dot-reporter": "^6.4.7",
    "@wdio/jasmine-framework": "^6.4.7",
    "@wdio/local-runner": "^6.4.7",
    "@wdio/selenium-standalone-service": "^6.4.7",
    "@wdio/sync": "^6.4.7",
    "cssnano": "^4.1.10",
    "jimp": "^0.14.0",
    "jsdoc": "^3.6.6",
    "jshint": "^2.12.0",
    "json2csv": "^5.0.1",
    "mustache": "^4.0.1",
    "postcss": "^8.1.3",
    "postcss-cli": "^8.1.0",
    "postcss-preset-env": "^6.7.0",
    "replace-color": "^2.3.0",
    "rollup": "^2.32.1",
    "ssh2-sftp-client": "^5.3.1",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "terser": "^5.3.8",
    "wdio-json-reporter": "^2.0.0",
    "xlsx": "^0.16.8",
    "yargs": "^16.1.0"
  },
  "jshintConfig": {
    "esversion": 8
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {
        "autoprefixer": false
      }
    }
  }
}
