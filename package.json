{
  "name": "psychojs",
  "version": "2021.1.2",
  "private": true,
  "description": "Helps run in-browser neuroscience, psychology, and psychophysics experiments",
  "license": "MIT",
  "author": {
    "name": "Alain Pitiot"
  },
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:docs",
    "build:css": "postcss -o dist/psychojs.css src/index.css",
    "build:docs": "jsdoc src -r -d docs",
    "build:js": "rollup -c",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "jshint rollup.config.js src/**/*.js",
    "start": "npm run build",
    "go": "set VERSION=2020.2 && rollup -c && node test/cli/deployExperiments.cjs"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "ie": 11
          },
          "spec": true,
          "forceAllTransforms": true,
          "debug": true
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": [
        true,
        {
          "severity": "warning"
        }
      ]
    }
  },
  "dependencies": {
    "ssh2-sftp-client": "^6.0.1"
  },
  "devDependencies": {
    "@wdio/cli": "^7.2.2",
    "@wdio/dot-reporter": "^7.2.1",
    "@wdio/jasmine-framework": "^7.2.1",
    "@wdio/local-runner": "^7.2.2",
    "@wdio/selenium-standalone-service": "^7.2.1",
    "@wdio/sync": "^7.2.2",
    "fs-extra": "^9.1.0",
    "jasmine-core": "^3.7.1",
    "jimp": "^0.16.1",
    "json2csv": "^5.0.6",
    "json2md": "^1.10.0",
    "karma": "^6.2.0",
    "karma-browserstack-launcher": "github:tpronk/karma-browserstack-launcher",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^4.0.1",
    "karma-json-reporter": "^1.2.1",
    "mustache": "^4.1.0",
    "replace-color": "^2.3.0",
    "wdio-json-reporter": "^2.0.0",
    "xlsx": "^0.16.9",
    "yargs": "^16.2.0"
  },
  "jshintConfig": {
    "esversion": 8
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {
        "autoprefixer": false
      }
    }
  }
}
